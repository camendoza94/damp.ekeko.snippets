<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="damp.ekeko.snippets.gui.viewer.SnippetViewer"
            id="damp.ekeko.snippets.gui.viewer.SnippetViewer"
            name="Ekeko Snippet Viewer">
      </view>
      <view
            allowMultiple="true"
            class="damp.ekeko.snippets.gui.viewer.SnippetTextViewer"
            id="damp.ekeko.snippets.gui.viewer.SnippetTextViewer"
            name="Ekeko Snippet Text Viewer">
      </view>
      <view
            allowMultiple="true"
            class="damp.ekeko.snippets.gui.viewer.SnippetGroupViewer"
            id="damp.ekeko.snippets.gui.viewer.SnippetGroupViewer"
            name="Ekeko Snippet Group Viewer">
      </view>
      <category
            id="EkekoSnippets"
            name="EkekoSnippets Category">
      </category>
      <view
            category="EkekoSnippets"
            class="damp.ekeko.snippets.gui.SnippetView"
            id="damp.ekeko.snippets.gui.SnippetView"
            name="Ekeko Template">
      </view>
      <view
            class="damp.ekeko.snippets.gui.ResultCheckView"
            id="damp.ekeko.snippets.gui.ResultCheckView"
            name="Ekeko Candidate Subjects Checking">
      </view>
      <view
            class="damp.ekeko.snippets.gui.GroupView"
            id="damp.ekeko.snippets.gui.GroupView"
            name="Ekeko Group">
      </view>
      <view
            class="damp.ekeko.snippets.gui.TransformsView"
            id="damp.ekeko.snippets.gui.TransformsView"
            name="Ekeko Transformation">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="EkekoSnippets.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="EkekoSnippets.commands.category"
            id="EkekoSnippets.commands.sampleCommand"
            name="Ekeko Snippets">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="damp.ekeko.snippets.gui.MainMenuHandler"
            commandId="EkekoSnippets.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="EkekoSnippets.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:damp.ekeko.menus.ekekoMenu?after=additions">
         <menu
               id="EkekoSnippets.menus.sampleMenu"
               label="EkekoSnippets"
               mnemonic="M">
            <command
                  commandId="EkekoSnippets.commands.sampleCommand"
                  id="EkekoSnippets.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="damp.ekeko.snippets.gui.MainView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
</plugin>
