<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="damp.ekeko.snippets.views"
            name="Ekeko/X">
      </category>
      <view
            category="damp.ekeko.snippets.views"
            class="damp.ekeko.snippets.gui.TemplateView"
            id="damp.ekeko.snippets.gui.TemplateView"
            name="Ekeko/X Template View">
      </view>
      <view
            category="damp.ekeko.snippets.views"
            class="damp.ekeko.snippets.gui.ResultCheckView"
            id="damp.ekeko.snippets.gui.ResultCheckView"
            name="Ekeko/X Subject Inspector View">
      </view>
      <view
            category="damp.ekeko.snippets.views"
            class="damp.ekeko.snippets.gui.TransformsView"
            id="damp.ekeko.snippets.gui.TransformsView"
            name="Ekeko/X Transformation">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="damp.ekeko.snippets.commands"
            name="Ekeko/X Commands">
      </category>
      <command
            category="damp.ekeko.snippets.commands"
            id="damp.ekeko.snippets.commands.template"
            name="Ekeko/X Template View">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="damp.ekeko.snippets.gui.TemplateViewCommandHandler"
            commandId="damp.ekeko.snippets.commands.template">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:damp.ekeko.menus.ekekoMenu?after=additions">
         <menu
               id="damp.ekeko.snippets.menu"
               label="Ekeko/X">
            <command
                  commandId="damp.ekeko.snippets.commands.template"
                  label="Template View">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="damp.ekeko.snippets.gui.MainView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
</plugin>
